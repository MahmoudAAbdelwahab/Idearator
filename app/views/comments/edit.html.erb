<%= form_for([@idea , @comment]) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %>
        prohibited this post from being saved:</h2>
      <ul>
        <% @idea.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_area :content ,:size => "6x6"  %>
  </div>
  <div class="actions">
    <%= f.submit nil, :class => 'btn btn-small btn-primary'%>
  </div>
<% end %>
<%= link_to '<i></i>'.html_safe, @idea %>

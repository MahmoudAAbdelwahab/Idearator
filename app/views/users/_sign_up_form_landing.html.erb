<%= form_tag user_registration_path do %>
  <%= label_tag 'email' %>
  <%= text_field_tag 'user[email]' %>
  <%= label_tag 'password' %>
  <%= password_field_tag 'user[password]' %>
  <%= label_tag 'confirm_password' %>
  <%= password_field_tag 'user[password_confirmation]' %>
  <%= label_tag 'username' %>
  <%= text_field_tag 'user[username]' %>
  <div class="text-center">
    <%= submit_tag 'Sign Up', class: 'sign-up-landing-button' %>
  </div>
<% end %>


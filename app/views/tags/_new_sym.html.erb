<div>
<%= form_for @tag, :html => { :class => 'form-horizontal' }, :url =>  url_for(:controller => 'tags',  :action => 'addsym') do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field'%>
    </div>
  </div>
<div class="modal-footer">
  <%= f.submit "New Synonym", :class => 'btn btn-primary' %>
  <a href="#" class="btn" data-dismiss="modal">Close</a>
</div>
<% end %>
